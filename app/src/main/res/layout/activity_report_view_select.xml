<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.kahwai.ezhasil.ReportViewSelectActivity">

    <TextView
        android:id="@+id/chg_yr_pw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/gothic_bold"
        android:text="CHANGE YOUR PASSWORD"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chg_yr_pw2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:fontFamily="@font/gothic"
        android:text="Please make sure you change your password regularly to prevent cybercrime."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chg_yr_pw_id" />

    <TextView
        android:id="@+id/oldpw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gothic_bold"
        android:text="Please key in your old password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chg_yr_pw2_id" />

    <EditText
        android:id="@+id/oldpw"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox_email"
        android:fontFamily="@font/gothic"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/oldpw_id"/>

    <TextView
        android:id="@+id/newpw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/gothic_bold"
        android:text="Please key in your new password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldpw" />

    <EditText
        android:id="@+id/newpw"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox_email"
        android:fontFamily="@font/gothic"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/newpw_id"/>

    <TextView
        android:id="@+id/newpw_2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gothic_bold"
        android:text="Confirm your new password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpw" />

    <EditText
        android:id="@+id/newpw_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox_email"
        android:fontFamily="@font/gothic"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/newpw_2_id"/>

    <Button
        android:id="@+id/btnChange"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:background="@color/amberDark"
        android:fontFamily="@font/gothic_bold"
        android:text="Change"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpw_2" />
</android.support.constraint.ConstraintLayout>
